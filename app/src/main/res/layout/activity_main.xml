<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haoyanhui.androidannotationsdemo.MainActivity">


    <Button
        android:id="@+id/btn_start_detail"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="start_detail" />

    <Button
        android:id="@+id/btn_refresh_list"
        android:layout_toRightOf="@id/btn_start_detail"
        android:text="refresh_list"
        android:layout_width="140dp"
        android:layout_height="50dp" />

    <ListView
        android:id="@+id/lv_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#cccccc"
        android:dividerHeight="0.5dp"
        android:layout_below="@id/btn_start_detail" />

</RelativeLayout>
